<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.posturacerta">

    <application
        android:allowBackup="true"
        android:icon="@drawable/imagemsplash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppBase">
        <activity android:name=".views.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.PesquisaActivity"
            android:label="@string/title_activity_pesquisa"
            android:theme="@style/AppBase" />
        <activity android:name=".views.SplashActivity">

        </activity>
        <activity
            android:name=".views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppBaseNoActionBar" />
    </application>

</manifest>